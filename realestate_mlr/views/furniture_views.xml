<odoo>
    <record id="view_realestate_furniture_list" model="ir.ui.view">
        <field name="name">realestate.furniture.list</field>
        <field name="model">realestate.furniture</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="product_id"/>
                <field name="location"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <record id="view_realestate_furniture_form" model="ir.ui.view">
        <field name="name">realestate.furniture.form</field>
        <field name="model">realestate.furniture</field>
        <field name="arch" type="xml">
            <form string="Furniture">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="product_id"/>
                        <field name="qty"/>
                        <field name="location"/>
                        <field name="is_active"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Units">
                            <field name="unit_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Inventory">
                            <field name="stock_quant_ids" context="{'default_product_id': product_id}" mode="tree,form">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="location_id"/>
                                    <field name="quantity"/>
                                    <field name="reserved_quantity"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="location_id"/>
                                        <field name="quantity"/>
                                        <field name="reserved_quantity"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_realestate_furniture" model="ir.actions.act_window">
        <field name="name">Furniture</field>
        <field name="res_model">realestate.furniture</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_realestate_furniture" name="Furniture" parent="menu_realestate_root" action="action_realestate_furniture" sequence="50"/>
</odoo>
