<odoo>
    <template id="technician_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="employee">
                <div class="page" style="padding: 20px; font-family: Arial, sans-serif;">
                    <h1 style="text-align: center; border-bottom: 1px solid #ccc; padding-bottom: 10px;">
                        Employee Shift Report
                    </h1>

                    <table style="width: 100%; margin-top: 30px; font-size: 14px;">
                        <tr>
                            <td style="width: 25%; font-weight: bold;">Name:</td>
                            <td><t t-esc="employee.name"/></td>
                        </tr>
                        <tr>
                            <td style="font-weight: bold;">Email:</td>
                            <td><t t-esc="employee.work_email" /></td>
                        </tr>
                        <tr>
                            <td style="font-weight: bold;">Mobile:</td>
                            <td><t t-esc="employee.mobile_phone" /></td>
                        </tr>
                        <tr>
                            <td style="font-weight: bold;">Department:</td>
                            <td><t t-esc="employee.department_id.name" /></td>
                        </tr>
                    </table>

                    <div style="margin-top: 50px; font-size: 12px; color: #999; text-align: right;">
                        Report generated by Odoo 18
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
