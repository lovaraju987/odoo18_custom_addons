<odoo>
    <record id="realestate_abstract_entity_view_list" model="ir.ui.view">
        <field name="name">realestate.abstract.entity.list</field>
        <field name="model">realestate.abstract.entity</field>
        <field name="arch" type="xml">
            <list string="RealEstate Entity">
                <field name="partner_id"/>
            </list>
        </field>
    </record>
    <record id="realestate_abstract_entity_view_form" model="ir.ui.view">
        <field name="name">realestate.abstract.entity.form</field>
        <field name="model">realestate.abstract.entity</field>
        <field name="arch" type="xml">
            <form string="RealEstate Entity">
                <header>

        </header>
                <sheet>
                    <div class="oe_button_box" name="buttons" />
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                    />
                    <div class="oe_title" name="title">
                        <group>
                            <group>
                                <h1>
                                    <field name="partner_id" placeholder="Name" />
                                </h1>
                            <!-- image_256 field removed: not present on model -->
                                    name="image_256"
                                    nolabel="1"
                                    widget='image'
                                    options='{"preview_image": "image_256"}'
                                />
                            </group>
                        </group>
                    </div>
                    <notebook>
                        <page name="page_general_info" string="General Information">
                            <group>
                                <group name="general_first" />
                                <group name="general_second" />
                            </group>
                            <group name="group_contact_info">
                                <group name="group_contact_left">
                                    <field
                                        name="type"
                                        groups="base.group_no_one"
                                    />
                                </group>
                                <group
                                    name="group_contact_right"
                                    string="Contact Information"
                                >
                                    <field name="phone" widget="phone"/>
                                    <field name="mobile" widget="phone"/>
                                    <!-- user_ids field removed: not present on model -->
                                    <field name="email" widget="email"/>
                                    <field name="lang" />
                                    <field
                                        name="category_id"
                                        widget="many2many_tags"
                                        placeholder="Tags..."
                                        options="{'no_create_edit': True}"
                                    />
                                </group>
                            </group>
                            <group name="main_data">
                                <group name="left" />
                                <group name="right" />
                            </group>
                        </page>
                        <page name="page_location" string="Location">
                            <group>
                                <group name="group_location_left">
                                    <label for="street" string="Address" />
                                    <div class="o_address_format">
                                        <div class="oe_edit_only">
                                            <!-- open_parent button removed: not a valid action on this model -->
                                        </div>
                                        <field
                                            name="street"
                                            placeholder="Street..."
                                            class="o_address_street"
                                            
                                        />
                                        <field
                                            name="street2"
                                            placeholder="Street 2..."
                                            class="o_address_street"
                                            
                                        />
                                        <field
                                            name="city"
                                            placeholder="City"
                                            class="o_address_city"
                                        />
                                        <field
                                            name="state_id"
                                            class="o_address_state"
                                            placeholder="State"
                                            options='{"no_open": True}'
                                            context="{'country_id': country_id, 'zip': zip}"
                                            domain="[('country_id', '=', country_id)]"
                                        />
                                        <field
                                            name="zip"
                                            placeholder="ZIP"
                                            class="o_address_zip"
                                        />
                                        <field
                                            name="country_id"
                                            placeholder="Country"
                                            class="o_address_country"
                                            options='{"no_open": True, "no_create": True}'
                                        />
                                    </div>
                                </group>
                                <group name="group_location_right" />
                            </group>
                        </page>
                        <page name="page_contacts" string="Contacts &amp; Addresses">
                            <field
                                name="child_ids"
                                mode="kanban"
                                context="{'default_parent_id': id,
                                         'default_street': street,
                                         'default_street2': street2,
                                         'default_city': city,
                                         'default_state_id': state_id,
                                         'default_zip': zip,
                                         'default_country_id': country_id,
                                         'default_lang': lang,
                                         }"
                            >
                                <kanban>
                                    <field name="color" />
                                    <field name="name" />
                                    <field name="title" />
                                    <field name="type" />
                                    <field name="email" />
                                    <field name="parent_id" />
                                    <field name="is_company" />
                                    <field name="function" />
                                    <field name="phone" />
                                    <field name="street" />
                                    <field name="street2" />
                                    <field name="zip" />
                                    <field name="city" />
                                    <field name="country_id" />
                                    <field name="state_id" />
                                    <field name="lang" />
                                    <templates>
                                        <t t-name="kanban-box">
                                            <t
                                                t-set="color"
                                                t-value="kanban_color(record.color.raw_value)"
                                                name="contact_kanban_color"
                                            />
                                            <div
                                                t-attf-class="{{ color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') }} oe_kanban_global_click"
                                            >
                                                <a
                                                    t-if="!read_only_mode"
                                                    type="delete"
                                                    class="fa fa-times pull-right"
                                                />
                                                <div
                                                    class="o_kanban_image"
                                                    name="contact_kanban_image"
                                                >
                                                    <img
                                                        t-if="record.image_1920.raw_value"
                                                        t-attf-src="data:image/png;base64,{{ record.image_1920.raw_value }}"
                                                        alt="Image"
                                                    />
                                                    <t
                                                        t-if="!record.image_1920.raw_value"
                                                        name="kanban_image_default"
                                                    >
                                                        <img
                                                            name="kanban_image_default_delivery"
                                                            t-if="record.type.raw_value === 'delivery'"
                                                            t-attf-src='{{ _s }}/base/static/src/img/truck.png'
                                                            alt="Delivery"
                                                        />
                                                        <img
                                                            name="kanban_image_default_invoice"
                                                            t-if="record.type.raw_value === 'invoice'"
                                                            t-attf-src='{{ _s }}/base/static/src/img/money.png'
                                                            alt="Invoice"
                                                        />
                                                        <t
                                                            t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'"
                                                        >
                                                            <img
                                                                name="kanban_image_default_company"
                                                                t-if="record.is_company.raw_value === true"
                                                                t-attf-src='{{ _s }}/base/static/src/img/company_image.png'
                                                                alt="Company"
                                                            />
                                                            <img
                                                                name="kanban_image_default_person"
                                                                t-if="record.is_company.raw_value === false"
                                                                t-attf-src='{{ _s }}/base/static/src/img/avatar.png'
                                                                alt="Contact"
                                                            />
                                                        </t>
                                                    </t>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <field name="name" />
                                                    <div
                                                        t-if="record.function.raw_value"
                                                    >
                                                        <field name="function" />
                                                    </div>
                                                    <div t-if="record.email.raw_value">
                                                        <field name="email" />
                                                    </div>
                                                    <div
                                                        t-if="record.type.raw_value != 'contact'"
                                                    >
                                                        <div>
                                                            <field name="zip" />
                                                            <field name="city" />
                                                        </div>
                                                        <field
                                                            t-if="record.state_id.raw_value"
                                                            name="state_id"
                                                        />
                                                        <field name="country_id" />
                                                    </div>
                                                    <div t-if="record.phone.raw_value">
                                                        Phone:
                                                        <field name="phone" />
                                                    </div>
                                                    <div t-if="record.mobile.raw_value">
                                                        Mobile:
                                                        <field name="mobile" />
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form string="Contact / Address">
                                    <sheet>
                                        <field
                                            name="type"
                                            required="1"
                                            widget="radio"
                                            options="{'horizontal': true}"
                                        />
                                        <hr />
                                        <group>
                                            <group>
                                                <label for="street" string="Address" />
                                                <div>
                                                    <div
                                                        class="o_address_format"
                                                        name="div_address"
                                                    >
                                                        <field
                                                            name="street"
                                                            placeholder="Street..."
                                                            class="o_address_street"
                                                        />
                                                        <field
                                                            name="street2"
                                                            placeholder="Street 2..."
                                                            class="o_address_street"
                                                        />
                                                        <field
                                                            name="city"
                                                            placeholder="City"
                                                            class="o_address_city"
                                                        />
                                                        <field
                                                            name="state_id"
                                                            class="o_address_state"
                                                            placeholder="State"
                                                            options='{"no_open": True}'
                                                            context="{'country_id': country_id, 'zip': zip}"
                                                        />
                                                        <field
                                                            name="zip"
                                                            placeholder="ZIP"
                                                            class="o_address_zip"
                                                        />
                                                        <field
                                                            name="country_id"
                                                            placeholder="Country"
                                                            class="o_address_country"
                                                            options='{"no_open": True, "no_create": True}'
                                                        />
                                                    </div>
                                                </div>
                                            </group>
                                            <group>
                                                <field
                                                    name="name"
                                                    string="Contact Name"
                                                />
                                                <field
                                                    name="title"
                                                    placeholder="e.g. Mr."
                                                />
                                                <field
                                                    name="function"
                                                    placeholder="e.g. Sales Director"
                                                />
                                                <field name="email" />
                                                <field name="phone" widget="phone" />
                                                <field name="mobile" widget="phone" />
                                                <field
                                                    name="comment"
                                                    placeholder="Internal Note..."
                                                />
                                            </group>
                                        </group>
                                        <field name="lang" invisible="True" />
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page name='page_internal_notes' string="ID &amp; Notes">
                             <!-- comment field removed: not available directly on this model, use partner_id.comment if needed -->
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="realestate_abstract_entity_view_kanban" model="ir.ui.view">
        <field name="name">realestate.abstract.entity.kanban</field>
        <field name="model">realestate.abstract.entity</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="partner_id" />
                <field name="email" />
                <field name="phone" />
                <field name="street" />
                <field name="street2" />
                <field name="zip" />
                <field name="city" />
                <field name="country_id" />
                <field name="mobile" />
                <field name="state_id" />
                <field name="category_id" />
                <field name="type" />
                <templates>
                    <t t-name="kanban-box">
                        <div
                            class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban"
                        >

                            <div class="oe_kanban_details">
                                <strong class="oe_partner_heading">
                                </strong>
                                <ul name="entity_details">

                                </ul>
                                <div class="oe_kanban_partner_links" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="realestate_abstract_entity_view_search" model="ir.ui.view">
        <field name="name">realestate.abstract.entity.search</field>
        <field name="model">realestate.abstract.entity</field>
        <field name="arch" type="xml">
            <search string="RealEstate Entities">
                <field name="partner_id" />
            </search>
        </field>
    </record>
</odoo>
